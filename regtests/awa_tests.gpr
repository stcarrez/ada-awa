	"../plugins/awa-changelogs/regtests",
	"../plugins/awa-questions/regtests");

   for Main use Mains;

   for Object_Dir use "../obj/awa_tests";
   for Exec_Dir use "../bin";

   package Binder renames Awa_Config.Binder;
   package Builder renames Awa_Config.Builder;
   package Compiler renames Awa_Config.Compiler;
   package Linker renames Awa_Config.Linker;

end Awa_Tests;
